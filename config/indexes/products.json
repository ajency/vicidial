{
  "mappings": {
    "_doc": {
      "dynamic_templates": [
        {
          "search_result_data": {
            "mapping": {
              "type": "text",
              "index": false
            },
            "path_match": "search_result_data.*"
          }
        },
        {
          "category_scores": {
            "mapping": {
              "type": "long"
            },
            "path_match": "category_scores.*"
          }
        },
        {
          "number_sort": {
            "mapping": {
              "type": "double"
            },
            "path_match": "number_sort.*"
          }
        },
        {
          "category": {
            "mapping": {
              "type": "text"
            },
            "path_match": "category.*"
          }
        },
        {
          "string_sort": {
            "mapping": {
              "type": "text"
            },
            "path_match": "string_sort.*"
          }
        },
        {
          "scores": {
            "mapping": {
              "type": "double"
            },
            "path_match": "scores.*"
          }
        }
      ],
      "properties": {
        "variants": {
          "type": "nested",
          "properties": {
            "variant_id": {
              "type": "long"
            },
            "variant_list_price": {
              "type": "double"
            },
            "variant_sale_price": {
              "type": "double"
            },
            "variant_size_id": {
              "type": "long"
            },
            "variant_size_name": {
              "type": "keyword"
            }
          }
        },
        "search_data": {
          "type": "nested",
          "include_in_parent": false,
          "properties": {
            "full_text": {
              "type": "text"
            },
            "full_text_boosted": {
              "type": "text"
            },
            "string_facet": {
              "type": "nested",
              "properties": {
                "facet_name": {
                  "type": "keyword"
                },
                "facet_value": {
                  "type": "keyword"
                }
              }
            },
            "number_facet": {
              "type": "nested",
              "properties": {
                "facet_name": {
                  "type": "keyword"
                },
                "facet_value": {
                  "type": "long"
                }
              }
            },
            "boolean_facet": {
              "type": "nested",
              "properties": {
                "facet_name": {
                  "type": "keyword"
                },
                "facet_value": {
                  "type": "boolean"
                }
              }
            },
            "attributes": {
              "type": "nested",
              "properties": {
                "attribute_name": {
                  "type": "keyword"
                },
                "attribute_value": {
                  "type": "text"
                }
              }
            }
          }
        },
        "type": {
          "type": "keyword"
        },
        "id": {
          "type": "float"
        }
      }
    }
  }
}